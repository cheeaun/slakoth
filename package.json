{
  "name": "slakoth",
  "version": "0.0.1",
  "description": "Slack bot to auto-post tech events in Singapore",
  "main": "index.js",
  "keywords": [
    "slack",
    "bot",
    "singapore",
    "events",
    "tech"
  ],
  "author": "Lim Chee Aun",
  "license": "ISC",
  "dependencies": {
    "@slack/client": "~4.6.0",
    "dotenv": "~6.0.0",
  },
  "now": {
    "alias": "slakoth",
    "env": {
      "SLACK_TOKEN": "@slack-bot-token",
      "SLACK_CHANNEL": "@slack-channel"
    },
    "scale": {
      "sfo1": {
        "min": 1,
        "max": 1
      }
    },
    "files": [
      "server.js",
      "package.json",
      "package-lock.json"
    ]
  }
}
